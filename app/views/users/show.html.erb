<h2> User details </h2>
<div class="card card-header results">
    <table class='col-md-12'>
      <tbody>
            <tr>
                <td class='mr-2'><strong>Email: </strong><%= @user.email %></td>
                <td><strong>Name: </strong><%= @user.full_name %></td>
                <td><% if current_user.not_friends_with? @user %>
                        <%= link_to "Follow friend?", friendships_path(friend: @user) , class: "btn btn-xs btn-success", method: :post%>
                    <% else %>
                        <span class="badge badge-secondary">
                            You are friends.
                        </span>
                    <% end %>
                </td>
            </tr>
      </tbody>
    </table>
</div>

<% if @tracked_stocks.any? %>
    <%= render 'stocks/list' %>
<% end %>