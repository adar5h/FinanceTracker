<div class="row">
    <div class="col-10">
        <table class="table table-bordered table-hover">
            <thead class="thead-dark">
                <tr align="center">
                    <th scope="col">Email</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Stocks tracking</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody class='cent'>
                <% @friends.each do |friend| %>
                    <tr align="center">
                        <td><%= friend.email %></td>
                        <th><%= friend.first_name%></th>
                        <th><%= friend.last_name%></th>
                        <td><%= friend.stocks.count %></td>
                        <td><%= link_to 'Stop following', friendship_path(friend), data: {confirm: "Are you sure?"} ,method: :delete, class: "btn btn-sm btn-warning"%></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>